extends page

append container
	.ui.middle.aligned.center.aligned.grid#wrapper: .column
		form.ui.large.form(action='#' method='POST')
			.ui.padded.secondary.segment
				.field: .ui.left.icon.input
					i.student.icon
					input(type='text' name='id' placeholder='학번')
				.field: .ui.left.icon.input
					i.lock.icon
					input(type='password' name='password' placeholder='비밀번호')
				.ui.fluid.large.teal.submit.button 로그인
			.ui.error.message
		.ui.message
			a(href='/register') 회원가입

append stylesheets
	link(rel='stylesheet' type='text/css' href='/resources/css/login.css')

append scripts
	script(src='/resources/js/login.js')
